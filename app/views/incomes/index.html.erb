<div class="container">
<p id="notice"><%= notice %></p>

<h1>Incomes</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Categories</th>
      <th>Amount</th>
      <th>Issued at</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @incomes.each do |income| %>
      <tr>
        <td><%=income.id %></td>

        <td><%= (income.categories.all.map { |t| t.name }).join(', ') %></td> 
        <td><%= income.amount %></td>
        <td><%= income.issued %></td>

        <td>
          <%= link_to 'Edit', edit_income_path(income), class: "btn btn-sm btn-warning" %>
          <%= link_to 'Delete', income, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
        </td>

      </tr>

  </tbody>
<% end %>
</table>
<br>
 <%= link_to 'New ', new_income_path, class: "btn btn-md btn-success" %>
<br>
<br>
<div class="apple_pagination">
  <%= will_paginate @categories, container: false %>
  </div>
  <br>
  
  

</div>