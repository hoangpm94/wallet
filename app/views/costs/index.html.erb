<div class="container">
<p id="notice"><%= notice %></p>

<h1>Costs</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th> Categories </th>
      <th>Amount</th>
      <th>Issued at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @costs.each do |cost| %>
  
    <tr>
      <th scope="row"><%= cost.id %></th>
      <td><%= (cost.categories.all.map { |t| t.name }).join(', ') %> </td> 
      <td><%= cost.amount %></td>
      <td><%= cost.issued %></td>
      
      <td>
      
       <%= link_to 'Edit', edit_cost_path(cost), class: 'btn btn-sm btn-warning' %> 
       <%= link_to 'Destroy', cost, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-sm btn-danger' %> 
      </td>
    </tr>
     <% end %>
    
  </tbody>
</table>
<br>
<%= link_to 'New ', new_cost_path,class: 'btn btn-md btn-success'%>
<br> 
<br>
<div class="apple_pagination">
  <%= will_paginate @categories, container: false %>
  </div>
  <br>

</div>