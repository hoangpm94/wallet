<div class="container">
<% provide(:page_title, 'All Category') %>
<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th> Name</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
    <tr>
      <th scope="row"><%= category.id %></th>
      <td><%= category.name %></td>
      <td><%= category.created_at %></td>
       <td>
        
        <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-sm btn-warning' %> 
        <%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %> 

        </td>
        
    </tr>
     <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New ', new_category_path, class: 'btn btn-md  btn-success'%>
<br>
<br>
  <div class="apple_pagination">
  <%= will_paginate @categories, container: false %>
  </div>
  <br>


</div>
